% Example 1: How to cite a paper from an LHC Collaboration 
% The name of the first author must NOT appear, hence the use of xauthor instead of author in this example.
@Article{lhcCollaboration:2012,  
	xauthor 		= "Aad, G and others", 
	title 			= "{Searches for supersymmetry with the ATLAS detector using final states with two leptons 
					and missing transverse momentum in $\sqrt{s} =$~7 TeV proton-proton collisions}",
	collaboration 	= "ATLAS",
	journal 		= plb,  
	volume 		= "709",
	pages 		= "137",  
	doi 			= "10.1016/j.physletb.2012.01.076",
	year 			= "2012",
	archivePrefix 	= "arXiv",
	eprint 		= "1110.6189",   
	primaryClass 	= "hep-ex"
} 

