% The name of the first author MUST appear.
@Article{otherCollaboration:2007,
	author		= "Alver, B. and others",
	title			= "{Cluster properties from two-particle angular correlations in p+p collisions at $\sqrt{s}=200$ GeV and 410 GeV}",
	collaboration	= "PHOBOS",
	journal		= prc,
	volume		= "75",
	pages		= "054913",
	doi			= "10.1103/PhysRevC.75.054913",
	year			= "2007",
	archivePrefix	= "arXiv",
	eprint		= "0704.0966",
	primaryClass	= "hep-ex"
}

